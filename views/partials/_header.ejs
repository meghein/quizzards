<header>
  <nav class="navbar-expand-md navbar-dark bg-primary">
    <div class="d-flex justify-content-center align-items-center">
      <div class="logo">
        <i class="fas fa-hat-wizard fa-5x"></i>
      </div>
      <div class="navbar-nav mr-auto">
        <h1>QUIZZARDS</h1>
      </div>
      <% if(user){ %>
      <h4>Hello, <%= user.name %>!</h4>
      <div style="margin: 1rem;"></div>
      <div class="d-flex justify-content-flex-end">
        <form class="form-inline" action="/logout" method="POST">
          <button type="submit" class="btn btn-outline-dark">Logout</button>
        </form>
        <div style="margin: 1rem;"></div>
        <form class="form-inline" action="/quizzes/new" method="GET">
          <button type="submit" class="btn btn-outline-dark">Create New Quiz</button>
        </form>
        <div style="margin: 1rem;"></div>
        <% } else { %>
        <form class="form-inline" action="/login" method="GET">
          <button type="submit" class="btn btn-outline-dark">Login</button>
        </form>
        <div style="margin: 1rem;"></div>
        <form class="form-inline" action="/register" method="GET">
          <button type="submit" class="btn btn-outline-dark">Register</button>
        </form>
      </div>
      <% } %>
    </div>
  </nav>
</header>
